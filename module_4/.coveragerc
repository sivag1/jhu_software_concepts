# Coverage.py configuration for Module 4 pytest suite
# This file configures which code is measured during test coverage analysis

[run]
# Only measure coverage for app.py (the main application file)
source = module_4.src.app

# Files/directories to exclude from coverage measurement
omit =
    # Exclude test files
    */tests/*
    *\tests\*
    # Exclude subprocess scripts (scraper, cleaner, etc.) - these are external processes
    */subprocess/*
    *\subprocess\*
    # Exclude legacy/unused code from module_3 not imported in current codebase
    *load_data.py
    # Exclude query_data.py - legacy code
    *query_data.py
    # Exclude pipeline orchestration - subprocess execution can't be tested without
    # violating "no live internet/long-running scrapes" requirement
    *run_pipeline.py
    module_4/src/run_pipeline.py
    module_4\src\run_pipeline.py

[report]
# Lines matching these patterns are excluded from coverage reports
exclude_lines =
    # Standard pragma for intentionally uncovered code
    pragma: no cover
    # Don't require coverage for script entry points
    if __name__ == .__main__.:
    # Don't require coverage for debugging representations
    def __repr__
    # Don't require coverage for defensive assertions
    raise AssertionError
    raise NotImplementedError
